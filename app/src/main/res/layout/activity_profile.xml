<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context=".Profile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/about"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:paddingTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:paddingRight="20dp"
            android:src="@drawable/dennis" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/image"
            android:text="Dennis Kirimi"
            android:layout_gravity="center_horizontal"
            android:textColor="#696969"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/line"
            android:layout_below="@id/name"
            android:background="#696969"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/track"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:layout_below="@id/line"
            android:text="Track:"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/android"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_below="@id/line"
            android:layout_toRightOf="@id/track"
            android:text="Android"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/country"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:layout_below="@id/track"
            android:text="Country:"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cname"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_below="@id/track"
            android:layout_toRightOf="@id/country"
            android:text="Kenya"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:layout_below="@id/country"
            android:text="Email:"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cemail"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_below="@id/country"
            android:layout_toRightOf="@id/email"
            android:text="denniskirimi.dk@gmail.com"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:layout_below="@id/email"
            android:text="Phone Number:"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_below="@id/email"
            android:layout_toRightOf="@id/phone"
            android:text="+254700107838"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slack"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:layout_below="@id/phone"
            android:text="Slack Username:"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_below="@id/phone"
            android:layout_toRightOf="@id/slack"
            android:text="Dennis"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>